	</producer>
	<!-- Blacksheep Joe (Ados) -->
	<producer npc="Blacksheep Joe" slot="blacksheepjoe_make_cheese_sausage" type="food">
		<welcome text="Witamy na mięsnym targu Blacksheep. Czy mogę zrobić dla Ciebie kiełbasę z serem?"/>
