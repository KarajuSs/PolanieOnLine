	<!-- hell -->
	<zone name="alt_hell" file="Level -2/nalwor/hell.tmx">
		<configurator class-name="games.stendhal.server.core.config.zone.NoTeleport"/>
		<configurator class-name="games.stendhal.server.maps.AlternativeZone"/>

		<!-- Alternative creatures -->
		<configurator class-name="games.stendhal.server.maps.AlternativeCreatures">
			<parameter name="factor">0.75</parameter>
		</configurator>

		<attributes>
			<parameter name="color_method">multiply</parameter>
			<parameter name="color">#992024</parameter>
			<parameter name="weather">fog_heavy</parameter>
		</attributes>
		
		<entity x="0" y="0">
			<implementation
				class-name="games.stendhal.server.entity.mapstuff.sound.BackgroundMusicSource">
				<parameter name="sound">ambiance-demon-1</parameter>
				<parameter name="volume">120</parameter>
			</implementation>
		</entity>
	</zone>

